{
    "name": "FlogoGW",
    "type": "flogo:app",
    "version": "0.0.1",
    "appModel": "1.0.0",
    "description": "IoT gateway for Raspberry pi",
    "triggers": [
        {
            "id": "receive_mqtt_message_2",
            "ref": "github.com/jvanderl/flogo-components/trigger/mqtt2",
            "name": "Receive MQTT Message 2",
            "description": "MQTT Topic Subscriber",
            "settings": {
                "broker": "tcp://192.168.1.218",
                "id": "",
                "user": "",
                "password": "",
                "store": "",
                "qos": 0,
                "cleansess": false
            },
            "handlers": [
                {
                    "action": {
                        "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
                        "data": {
                            "flowURI": "res://flow:device_to_gw"
                        }
                    },
                    "settings": {
                        "topic": "vfdemo/device/#"
                    }
                }
            ]
        }
    ],
    "resources": [
        {
            "id": "flow:device_to_gw",
            "data": {
                "name": "Device to GW",
                "tasks": [
                    {
                        "id": "log_2",
                        "name": "Log Message",
                        "description": "Simple Log Activity",
                        "activity": {
                            "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                            "input": {
                                "message": "",
                                "flowInfo": "false",
                                "addToFlow": "false"
                            }
                        }
                    }
                ]
            }
        }
    ]
}